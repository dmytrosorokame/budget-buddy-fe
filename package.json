{
  "name": "next-pilot-fe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "./node_modules/.bin/eslint --ext .ts,.js,.tsx ./",
    "lint:fix": "./node_modules/.bin/eslint --ext .ts,.js,.tsx ./ --fix",
    "stylelint": "./node_modules/.bin/stylelint './**/*.scss'",
    "stylelint:fix": "./node_modules/.bin/stylelint './**/*.scss' --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.(ts|tsx|js|jsx)": [
      "prettier --write",
      "npm run lint:fix -- --quiet"
    ],
    "*.(scss)": [
      "npm run stylelint:fix"
    ]
  },
  "dependencies": {
    "@types/node": "18.14.2",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "eslint": "8.35.0",
    "eslint-config-next": "13.2.2",
    "next": "13.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1"
  }
}
