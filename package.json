{
  "name": "budget-buddy-fe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "./node_modules/.bin/eslint --ext .ts,.js,.tsx ./",
    "lint:fix": "./node_modules/.bin/eslint --ext .ts,.js,.tsx ./ --fix",
    "stylelint": "./node_modules/.bin/stylelint './**/*.scss'",
    "stylelint:fix": "./node_modules/.bin/stylelint './**/*.scss' --fix",
    "dependencies-check": "depcruise --config .dependency-cruiser.js ./",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.(ts|tsx|js|jsx)": [
      "prettier --write",
      "npm run lint:fix -- --quiet"
    ],
    "*.(scss)": [
      "npm run stylelint:fix"
    ]
  },
  "dependencies": {
    "@types/node": "18.14.2",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "eslint": "8.35.0",
    "next": "13.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "dependency-cruiser": "^12.10.0",
    "eslint-config-next": "^13.2.3",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1"
  }
}
